{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2.5",
        "ext-json": "*",
        "ext-zip": "*",
        "ext-curl": "*",
        "fideloper/proxy": "^4.2",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^6.3|^7.0",
        "laravel/framework": "^7.0",
        "botble/api": "*@dev",
        "botble/menu": "*@dev",
        "botble/optimize": "*@dev",
        "botble/page": "*@dev",
        "botble/platform": "*@dev",
        "botble/shortcode": "*@dev",
        "botble/theme": "*@dev",
        "botble/plugin-management": "*@dev",
        "wikimedia/composer-merge-plugin": "^1.4",
        "doctrine/dbal": "^2.9",
        "league/flysystem-aws-s3-v3": "^1.0"
    },
    "require-dev": {
        "facade/ignition": "^2.0",
	"fakerphp/faker": "^1.10",
        "mockery/mockery": "1.3.1",
        "nunomaduro/collision": "^4.1",
        "phpunit/phpunit": "^8.5",
        "laravel/tinker": "^2.0",
        "botble/dev-tool": "*@dev",
        "botble/plugin-generator": "*@dev",
        "botble/theme-generator": "*@dev",
        "botble/widget-generator": "*@dev"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        },
        "merge-plugin": {
            "include": [
                "./platform/plugins/*/composer.json",
            	"./platform/themes/*/composer.json"
	    ],
            "recurse": false,
            "replace": false,
            "ignore-duplicates": false,
            "merge-dev": false,
            "merge-extra": false,
            "merge-extra-deep": false,
            "merge-scripts": false
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "./platform/core"
        },
        {
            "type": "path",
            "url": "./platform/packages/*"
        }
    ]
}
